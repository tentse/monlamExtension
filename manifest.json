{
    "manifest_version": 3,
    "name": "Monlam Translator Extension",
    "version": "1.0",
    "description": "A simple Chrome extension to translate text using Monlam API.",
    "permissions": ["activeTab", "scripting", "storage"],
    "action": {
      "default_popup": "monlam.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "background": {
      "service_worker": "javascript.js"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  